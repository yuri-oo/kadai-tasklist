<h1>
  id = <%= @task.id %>のタスク詳細ページ
</h1>

<table class="table table-bordered">
  <tr>
    <th>id</th>
    <td><%= @task.id %></td>
  </tr>
  <tr>
    <th>タイトル</th>
    <td><%= @task.status %></td>
  </tr>
  <tr>
    <th>メッセージ</th>
    <td><%= @task.content %></td>
  </tr>
</table>


<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-default' %>
<%= link_to "Delete", @task, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger' %>


